@model IEnumerable<ABCRetailWebApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Products</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Add New Product</a>
        <a asp-action="ProductImageGallery" class="btn btn-secondary">View Product Image Gallery</a>
    </div>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm border-light">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@Url.Content(product.ImageUrl)" alt="Product Image" class="card-img-top" style="max-height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top d-flex justify-content-center align-items-center" style="max-height: 200px; background-color: #f8f9fa;">
                            <span>No image available</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text fw-bold">@product.Price.ToString("C")</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Details" asp-route-partitionKey="@product.PartitionKey" asp-route-rowKey="@product.RowKey" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-partitionKey="@product.PartitionKey" asp-route-rowKey="@product.RowKey" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-partitionKey="@product.PartitionKey" asp-route-rowKey="@product.RowKey" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@model IEnumerable<string>

@{
    ViewData["Title"] = "Product Image Gallery";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Product Image Gallery</h1>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var imageUrl in Model)
            {
                var imageName = System.IO.Path.GetFileName(imageUrl);

                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card shadow-sm">
                        <img src="@imageUrl" class="card-img-top" alt="Product Image" style="max-height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <p class="card-text">@imageName</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">No images found.</p>
        }
    </div>
</div>

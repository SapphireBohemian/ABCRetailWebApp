@model ABCRetailWebApp.Models.QueueMessage

@{
    ViewData["Title"] = "Add Message";
}

<div class="container">
    <h1 class="mb-4">Add Message</h1>

    <form asp-action="Add" method="post">
        <div class="form-group mb-3">
            <label asp-for="MessageType" class="control-label"></label>
            <input asp-for="MessageType" class="form-control" />
            <span asp-validation-for="MessageType" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Message</button>
    </form>

    <a href="@Url.Action("Index", "Queue")" class="btn btn-secondary mt-3">Back to Queue Management</a>
</div>

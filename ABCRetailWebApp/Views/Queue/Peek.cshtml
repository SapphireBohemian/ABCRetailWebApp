@model IEnumerable<ABCRetailWebApp.Models.QueueMessage>

<div class="container content-wrapper">
    <h2 class="mb-4 text-center">Peek Messages</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">Message ID</th>
                    <th scope="col">Message Type</th>
                    <th scope="col">Content</th>
                    <th scope="col">Timestamp</th>
                    <th scope="col" class="action-header">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td>@message.MessageId</td>
                        <td>@message.MessageType</td>
                        <td class="content-column">@message.Content</td>
                        <td>@message.Timestamp?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td class="action-buttons">
                            <div class="btn-group" role="group">
                                <form asp-action="Dequeue" method="post" class="d-inline">
                                    <input type="hidden" name="messageId" value="@message.MessageId" />
                                    <input type="hidden" name="popReceipt" value="@message.PopReceipt" />
                                    <button type="submit" class="btn btn-warning btn-sm">Dequeue</button>
                                </form>
                                <form asp-action="Delete" method="post" class="d-inline ml-2">
                                    <input type="hidden" name="messageId" value="@message.MessageId" />
                                    <input type="hidden" name="popReceipt" value="@message.PopReceipt" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

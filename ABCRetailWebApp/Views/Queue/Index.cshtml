@model ABCRetailWebApp.Models.QueueMessage
@{
    ViewData["Title"] = "Queue Management";
}

<h2>Queue Management</h2>

<a href="@Url.Action("Peek", "Queue")" class="btn btn-primary">Peek Message</a>
<a href="@Url.Action("Dequeue", "Queue")" class="btn btn-primary">Dequeue Message</a>

<form asp-action="Add" method="post">
    <h3>Add Message</h3>
    <div class="form-group">
        <label asp-for="MessageType" class="control-label"></label>
        <input asp-for="MessageType" class="form-control" />
        <span asp-validation-for="MessageType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Message</button>
</form>

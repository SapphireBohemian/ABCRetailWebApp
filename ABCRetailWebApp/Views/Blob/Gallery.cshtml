@model IEnumerable<ABCRetailWebApp.Models.BlobModel>

@{
    ViewData["Title"] = "Gallery";
    var containerName = ViewBag.ContainerName as string;
}

<h1>Gallery - @containerName</h1>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Blob Name</th>
            <th>Upload Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blob in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Action("GetImage", "Blob", new { blobName = blob.BlobName, containerName = containerName })" alt="@blob.BlobName" style="max-width: 200px; max-height: 200px;"/>
                </td>
                <td>@blob.BlobName</td>
                <td>@blob.UploadDate</td>
                <td>
                    <a href="@Url.Action("DownloadBlob", "Blob", new { blobName = blob.BlobName, containerName = containerName })" class="btn btn-primary">Download</a>
                    <a href="@Url.Action("DeleteBlob", "Blob", new { blobName = blob.BlobName, containerName = containerName })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

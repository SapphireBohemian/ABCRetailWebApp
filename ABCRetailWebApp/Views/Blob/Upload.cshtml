@model BlobUploadViewModel
@{
    ViewData["Title"] = "Upload Blob";
}

<div class="container upload-blob-container">
    <h1 class="page-title">Upload Blob</h1>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info">@ViewBag.Message</div>
    }

    <form asp-action="Upload" method="post" enctype="multipart/form-data" class="upload-blob-form">
        <div class="form-group">
            <label for="file">Select file to upload</label>
            <input type="file" name="File" id="file" class="form-control" />
        </div>
        <div class="form-group">
            <input type="hidden" name="ContainerName" value="@Model.ContainerName" />
            <input type="submit" value="Upload" class="btn btn-primary" />
        </div>
    </form>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@model IEnumerable<ABCRetailWebApp.Models.BlobModel>

@{
    ViewData["Title"] = "Product Images";
}

<div class="container mt-5">
    <h2 class="mb-4">Product Images</h2>
    
    <a asp-action="Gallery" asp-route-containerName="product-images" class="btn btn-secondary mb-3">View Gallery</a>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Image Name</th>
                    <th>Upload Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blob in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("DownloadBlob", new { containerName = "product-images", blobName = blob.BlobName })">
                                @blob.BlobName
                            </a>
                        </td>
                        <td>@blob.UploadDate.ToString("g")</td>
                        <td>
                            <a asp-action="DeleteBlob" asp-route-containerName="product-images" asp-route-blobName="@blob.BlobName" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No product images found.</p>
    }
</div>

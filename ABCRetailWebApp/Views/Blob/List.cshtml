@model IEnumerable<ABCRetailWebApp.Models.BlobModel>

@{
    ViewData["Title"] = "Blob List";
    var containerName = ViewData["ContainerName"]?.ToString();
}

<div class="container blob-list-container">
    <h1 class="page-title">Blob List for @containerName</h1>

    <!-- Navigation for container selection -->
    <div class="btn-group mb-4" role="group">
        <a asp-action="ProductImages" asp-route-containerName="product-images" class="btn btn-primary">View Product Images</a>
        <a asp-action="MediaContent" asp-route-containerName="media-content" class="btn btn-primary">View Media Content</a>
    </div>

  
</div>

@model ABCRetailWebApp.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-5">
    <h1 class="mb-4">Delete Customer</h1>

    <div class="alert alert-warning text-center">
        <h4 class="alert-heading">Warning!</h4>
        <p>Are you sure you want to delete this customer?</p>
        <div class="mb-3">
            <h5>@Model.Name</h5>
            <dl class="row justify-content-center">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.Address</dd>
            </dl>
        </div>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PartitionKey" />
            <input type="hidden" asp-for="RowKey" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-action="Details" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>



@{
    if (TempData["EmailSent"] != null)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div id="emailToast" class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["EmailSent"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var emailToastEl = document.getElementById('emailToast');
        if (emailToastEl) {
            var toast = new bootstrap.Toast(emailToastEl);
            toast.show();
        }
    });
</script>

